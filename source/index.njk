---
title: Martin Hujer blog
---
{% for post in collections.post | reverse -%}
    {% set this_year %}{{ post.date | extractYear }}{% endset %}
    {%- if year != this_year %}
        {%- if year is defined %}
            </ul>
        {% endif %}

        {% set year = this_year %}
            <h2 class="year-header">{{ year }}</h2>
            <ul>
    {%- endif %}
    <li>
        <h3>
            <a href="{{ post.url }}">{{ post.data.title }}</a>
            <small>
                {{ post.date | dateformat }}
            </small>
        </h3>
        {% if post.data.short -%}
            <p>{{ post.data.short }}</p>
        {%- endif %}
    </li>
{% endfor %}
